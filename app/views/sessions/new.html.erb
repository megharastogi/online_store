<div id="form_block">
<h3>Log In</h3>

<% form_tag session_path do -%>
<p><%= label_tag 'email' %>
<%= text_field_tag 'email', @email %></p>

<p><%= label_tag 'password' %>
<%= password_field_tag 'password', nil %></p>

<p id="remember_me"><%= label_tag 'remember_me', 'Remember me' %>
<%= check_box_tag 'remember_me', '1', @remember_me %></p>

<p><%= link_to "Forgot Password? " ,forgot_password_path %></p>
<%= submit_tag 'Log in' %>
<% end -%>
</div>
